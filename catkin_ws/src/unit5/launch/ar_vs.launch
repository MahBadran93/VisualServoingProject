<launch>
  
  <node pkg="unit5" name="ar_follower" type="ar_vs.py" clear_params="true" output="screen">
    <rosparam>
       rate: 15
       max_x: 20.0
       goal_x: 0.7
       x_threshold: 0.01
       y_threshold: 0.05
       y_scale: 5.0
       x_scale: 1.0
       max_angular_speed: 0.9
       min_angular_speed: 0.1
       max_linear_speed: 0.5
       min_linear_speed: 0.05
       TargetFlag: False
       marker_id: 0
       marker_id2: 0
       sm_markerFlag: False
       leftFlag: False
       rightFlag: False
       AlignedZeroFlag: False
       stopSearchingTargetLostFlag: False
       stopspinning: False
    </rosparam>   
  </node>
  	<arg name="marker_size" default="5.0" />  <!-- 5 worked perfectly-->
	<arg name="max_new_marker_error" default="0.08" />
	<arg name="max_track_error" default="0.7" />  <!-- 0.7 was perfect for size 5-->
		<!--<multimarker markers="2">
		    <marker index="5" status="1">
			<corner x="-2.2" y="-2.2" z="0.0" />
			<corner x="2.2" y="-2.2" z="0.0" />
			<corner x="2.2" y="2.2" z="0.0" />
			<corner x="-2.2" y="2.2" z="0.0" />
		    </marker>
		    <marker index="12" status="1">
			<corner x="-2.2" y="11.8" z="0.0" />
			<corner x="2.2" y="11.8" z="0.0" />
			<corner x="2.2" y="16.2" z="0.0" />
			<corner x="-2.2" y="16.2" z="0.0" />
		    </marker>
		</multimarker>-->
	<arg name="cam_image_topic" default="/camera/rgb/image_raw" />
	<arg name="cam_info_topic" default="/camera/rgb/camera_info" />		
	<arg name="output_frame" default="/base_link" />



	<node name="ar_track_alvar" pkg="ar_track_alvar" type="individualMarkers" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)"/>
</launch>